<Window x:Class="elearning2.PersoonWijzigen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        WindowStyle="None"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:elearning2"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="PersoonWijzigen" Height="525.49" Width="801.47">
    <Window.Background>
        <ImageBrush ImageSource="afbeeldingen/background.png"/>
    </Window.Background>
    <Grid Margin="10,0,0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="220*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btAddPerson" Content="Toevoegen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,486,0,0" Background="#FFE0381D" Height="19" Foreground="White" Click="btAddPerson_Click"/>
        <TextBox x:Name="tbVoornaam"  HorizontalAlignment="Left" Height="23" Margin="0,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbTussenvoegsel" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" Grid.Column="1" Margin="10,91,0,0"/>
        <TextBox x:Name="tbAchternaam"  HorizontalAlignment="Left" Height="23" Margin="2,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbTelefoonNummer"  HorizontalAlignment="Left" Height="23" Margin="1,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbEmail" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" Margin="0,230,0,0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbGebruikersnaam" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="0,335,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245"/>
        <xctk:IntegerUpDown Name="UdKamerNummer" Margin="0,276,0,0" Maximum="9999" Height="27" VerticalAlignment="Top"/>
        <PasswordBox x:Name="tbPass" HorizontalAlignment="Left" Margin="0,380,0,0" VerticalAlignment="Top" Height="23" Width="245" RenderTransformOrigin="-4.688,-1.306" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="cbRol" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="245" Margin="2,424,0,0">
            <ComboBoxItem Content="Leerling" HorizontalAlignment="Left" Width="243.2" Selected="ComboBoxItem_Selected"/>
            <ComboBoxItem Content="Consulent" HorizontalAlignment="Left" Width="243.2" Selected="ComboBoxItem_Selected_1"/>
        </ComboBox>
        <Button x:Name="btBack" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="50" Click="btBack_Click">
            <Button.Background>
                <ImageBrush ImageSource="afbeeldingen/back.png"/>
            </Button.Background>
        </Button>

        <Label x:Name="label" Content="Voornaam:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,65,0,0" Foreground="White" Width="75"/>
        <Label x:Name="label1" Content="Achternaam:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,114,0,0" Foreground="White" Width="75"/>
        <Label x:Name="label2" Content="Tussenvoegsel:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,65,0,0" Foreground="White" Width="91" Grid.Column="1"/>
        <Label x:Name="label3" Content="Telefoonnummer:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,158,0,0" Foreground="White" Width="106"/>
        <Label x:Name="label4" Content="E-mail adres:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,204,0,0" Foreground="White" Width="106"/>
        <Label x:Name="label5" Content="Kamernummer:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,250,0,0" Foreground="White" Width="106"/>
        <Label x:Name="label6" Content="Gebruikersnaam:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,304,0,0" Foreground="White" Width="106"/>
        <Label x:Name="label7" Content="Wachtwoord:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,354,0,0" Foreground="White" Width="106"/>
        <Label x:Name="label8" Content="Leerling of consulent:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,403,0,0" Foreground="White" Width="130" Grid.ColumnSpan="2"/>
        <ListView x:Name="lvUsers" HorizontalAlignment="Left" Height="495" VerticalAlignment="Top" Width="258" Grid.Column="1" Margin="397,10,0,0" SelectionChanged="lvUsers_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Voornaam" DisplayMemberBinding="{Binding voornaam}"/>
                    <GridViewColumn Header="Tussenvoegsel" DisplayMemberBinding="{Binding tussenvoegsel}"/>
                    <GridViewColumn Header="Achternaam" DisplayMemberBinding="{Binding achternaam}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
