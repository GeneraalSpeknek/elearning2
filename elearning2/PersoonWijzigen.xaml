<Window x:Class="elearning2.PersoonWijzigen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        WindowStyle="None"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:elearning2"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="PersoonWijzigen" Height="350" Width="525">
    <Window.Background>
        <ImageBrush ImageSource="afbeeldingen/background.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="442*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btAddPerson" Content="Toevoegen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,315,0,0" Background="#FFE0381D" Height="19" Foreground="White" Grid.ColumnSpan="2" Click="btAddPerson_Click"/>
        <TextBox x:Name="tbVoornaam" HorizontalAlignment="Left" Height="23" Margin="0,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbTussenvoegsel" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1" Margin="46.2,37,0,0"/>
        <TextBox x:Name="tbAchternaam" HorizontalAlignment="Left" Height="23" Margin="0,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" Grid.ColumnSpan="2"/>
        <xctk:IntegerUpDown Maximum="9999" Name="UdKamerNummer" Margin="0,149,3.8,171" RenderTransformOrigin="0.459,0.542" />
        <TextBox x:Name="tbTelefoonNummer" HorizontalAlignment="Left" Height="23" Margin="0,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tbEmail" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" Margin="0,121,0,0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
