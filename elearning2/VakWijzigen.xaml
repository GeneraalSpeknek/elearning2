<Window x:Class="elearning2.VakWijzigen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:elearning2"
        mc:Ignorable="d"
        Title="Vak wijzigen" Height="300" Width="521.008">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="259" VerticalAlignment="Top" Width="192">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding VakNaam}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="btDelete" Content="Verwijderen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="428,239,0,0"/>

    </Grid>
</Window>
